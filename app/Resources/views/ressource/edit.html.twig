{% extends 'base2.html.twig' %}


{% block body %}
<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12"> 
			{{ form_start(edit_form, { 'attr' : { 'class': 'form-horizontal' } }) }}
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">
						
					</h3>
				</div>
				<div class="panel-body">
					<div class="form-group">
						{{ form_label(edit_form.matiere,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
							<div class="input-group">
								{{ form_widget(edit_form.matiere,{ 'id':'selectMatiere', 'label_attr': {'class': 'form-control select'} }) }}
					  		</div>
							{{ form_errors(edit_form.matiere) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(edit_form.classe,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
							<div class="input-group">
								{{ form_widget(edit_form.classe,{ 'id':'selectClasse', 'label_attr': {'class': 'form-control select'} }) }}
					  		</div>
							{{ form_errors(edit_form.classe) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(edit_form.titre,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
							<div class="input-group">
								{{ form_widget(edit_form.titre) }}
					  		</div>
							{{ form_errors(edit_form.titre) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(edit_form.cours,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
		                       	{{ form_widget(edit_form.cours,{ 'attr': {'class': 'fileinput btn-primary'} } ) }}
							{{ form_errors(edit_form.cours) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(edit_form.ressource,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
		                       	{{ form_widget(edit_form.ressource,{ 'attr': {'class': 'fileinput btn-primary'} } ) }}
							{{ form_errors(edit_form.ressource) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(edit_form.commentaire,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
		                       	{{ form_widget(edit_form.commentaire)}}
							{{ form_errors(edit_form.commentaire) }}
						</div>
					</div>
				<div class="panel-footer">                                    
					<input type="submit" value="{{'add'|trans}}" class="btn btn-primary pull-right" />
				</div>
				{{ form_end(edit_form) }}
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block javascripts %}
	<script type='text/javascript' src="{{ asset('js/plugins/bootstrap/bootstrap-file-input.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/plugins.js') }}"></script>
<script type="text/javascript">

     $( document ).ready( function() {

                $('#selectMatiere').selectpicker({
 					style: 'btn-default',
  					size: 4
				});

				$('#selectClasse').selectpicker({
 					style: 'btn-default',
  					size: 4
				});
				
            });
</script>
{% endblock %}