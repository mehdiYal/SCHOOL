{% extends 'base2.html.twig' %}

{% block body %}
<div class="page-content-wrap">           
    <div class="row">
        <div class="col-md-12">               
			{{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}  
				<div class="panel panel-default">
		            <div class="panel-heading">
		                <h3 class="panel-title">{{classe.nom|trans}} {{classe.annee.nom}} {{classe.annee.niveau}}</h3>
		            </div>
		            <div class="panel-body">
						<div class="form-group">
							{{ form_label(form.matiere , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.matiere ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.matiere) }}
						    </div>
						</div>

						<div class="form-group">
							{{ form_label(form.enseignant , null ,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
							<div class="col-md-6 col-xs-12">
								<div class="input-group">
									<span class="input-group-addon"><span class="fa fa-pencil"></span></span>
						    		{{ form_widget(form.enseignant ,{ 'attr': {'class': 'form-control'} }) }}
						    	</div>
						    	{{ form_errors(form.enseignant) }}
						    </div>
						</div>
					</div>
			        <div class="panel-footer">                                    
			            <button class="btn btn-primary pull-right">Valider</button>
			        </div>
			    </div>
				{{ form_end(form) }}
			</div>
	    </div>
	    <div class="row">
	    	<div class="col-md-12">
	    		<div class="panel panel-default">
		            <div class="panel-heading">
		                <h3 class="panel-title">Liste des Enseignants</h3>
		            </div>
		            <div class="panel-body">
			    		<div class="table-responsive">
					        <table id="customers2" class="table datatable">
					            <thead>
					                <tr>
					                    <th>Enseignant</th>
					                    <th>Matiere</th>
					                </tr>
					            </thead>
					            <tbody>
					                {% for ens in classe.ensMat %}
					                    <tr>
					                    	<td>
					                    		<a href="{{ path('profileEnseignant',{'id':ens.enseignant.id})}}">
					                                {{ens.enseignant.nom}} {{ens.enseignant.prenom}}
					                            </a>
					                    	</td>
					                    	<td>
					                    		{{ens.matiere.nom}}
					                    	</td>
					                    </tr>
					                {% endfor %}
					            </tbody>
					        </table>                                    
					    </div>
					</div>
				</div>
	    	</div>
	    </div>                    
	</div>
{% endblock %}


{% block javascripts %}
	<script type='text/javascript' src="{{ asset('js/plugins/bootstrap/bootstrap-select.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/plugins/datatables/jquery.dataTables.min.js')}}"></script>
{% endblock %}
