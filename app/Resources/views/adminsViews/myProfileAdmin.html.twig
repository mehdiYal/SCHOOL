
{% extends 'base2.html.twig' %}

{% block body %}
<div class="row">	
	<div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body profile" style="background: url('{{asset("img/gallery/music-4.jpg")}}') center center no-repeat;">
                <div class="profile-image">
                    <img src="{% if app.user.photo %}{{ asset('uploads/photos/' ~ app.user.photo) }}{% else %}{{ asset('uploads/photos/avatar.png') }}{% endif %}" alt="{{app.user.nom}}"/>
                </div>
                <div class="profile-data">
                    <div class="profile-data-name">{{app.user.nom}} {{app.user.prenom}}</div>
                    <div class="profile-data-title" style="color: #FFF;">{{app.user.typeUser}}</div>
                </div>
                                                 
            </div>                                
            <div class="panel-body">                                    
                <div class="row">
                    <div class="col-md-6">
                        <a class="btn btn-info btn-rounded btn-block" href="{{ path('fos_user_change_password') }}"><span class="fa fa-check"></span> Changer mot de passe</a>
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-primary btn-rounded btn-block" href="{{ path('editAdmin',{'id':app.user.id})}}"><span class="fa fa-cog"></span> Editer Profile</a>
                    </div>
                </div>
            </div>
            <div class="panel-body list-group border-bottom">
                <a href="#" class="list-group-item "><span class=" col-md-3 fa fa-male"><b> GENRE :</b></span> {{app.user.genre}}</a>
                <a href="#" class="list-group-item"><span class=" col-md-3 fa fa-calendar"><b> Date et lieux de naissance :</b></span> {{app.user.dateDeNaissance|date('Y-m-d')}} Ã  {{app.user.lieuDeNaissance}}</a>                                
                <a href="#" class="list-group-item "><span class=" col-md-3 fa fa-location-arrow"><b> ADRESSE :</b></span> {{app.user.adresse}}</a>
                <a href="#" class="list-group-item "><span class=" col-md-3 fa fa-map-marker"><b> CODE POSTAL :</b></span> {{app.user.codePostal}}</a>
                <a href="#" class="list-group-item "><span class=" col-md-3 fa fa-mobile"><b> TELEPHONE :</b></span> {{app.user.telephone}}</a>
                <a href="#" class="list-group-item "><span class=" col-md-3 fa fa-envelope-o"><b> EMAIL :</b></span> {{app.user.email}}</a>
                <a href="#" class="list-group-item "><span class=" col-md-3 fa fa-user"><b> PSEUDO :</b></span> {{app.user.username}}</a>
            </div>
            <div class="panel-body">
                          
            </div>
        </div>                              
    </div>
</div>
	
	
{% endblock %}