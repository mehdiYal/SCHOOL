{% extends 'base2.html.twig' %}


{% block body %}
<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12"> 
			{{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">
						
					</h3>
				</div>
				<div class="panel-body">
					<div class="form-group">
						{{ form_label(form.matiere,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
							<div class="input-group">
								{{ form_widget(form.matiere,{ 'id':'selectMatiere', 'label_attr': {'class': 'form-control select'} }) }}
					  		</div>
							{{ form_errors(form.matiere) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.classe,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
							<div class="input-group">
								{{ form_widget(form.classe,{ 'id':'selectClasse', 'label_attr': {'class': 'form-control select'} }) }}
					  		</div>
							{{ form_errors(form.classe) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.date,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
							<div class="input-group">
								<span class="input-group-addon"><span class="fa fa-calendar"></span></span>
					   			{{ form_widget(form.date) }}
					  		</div>
							{{ form_errors(form.date) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.time,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
							<div class="input-group">
								<span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
					   			{{ form_widget(form.time) }}
					  		</div>
							{{ form_errors(form.time) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.travail,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
		                       	{{ form_widget(form.travail,{ 'attr': {'class': 'fileinput btn-primary'} } ) }}
							{{ form_errors(form.travail) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.commentaire,null,{ 'label_attr': {'class': 'col-md-3 col-xs-12 control-label'} }) }}
						<div class="col-md-6 col-xs-12">
		                       	{{ form_widget(form.commentaire)}}
							{{ form_errors(form.commentaire) }}
						</div>
					</div>
				<div class="panel-footer">                                    
					<input type="submit" value="{{'add'|trans}}" class="btn btn-primary pull-right" />
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block javascripts %}
	<script type='text/javascript' src="{{ asset('js/plugins/bootstrap/bootstrap-file-input.js') }}"></script>
	<script type="text/javascript">

     $( document ).ready( function() {

                $('.dp-3').datepicker({startView: 2,format: 'yyyy-mm-dd' });
                $('#selectMatiere').selectpicker({
 					style: 'btn-default',
  					size: 4
				});

				$('.timeForm').timepicker({
				    showMeridian: false,
	                defaultTime: '08:00'
	            });

				$('#selectClasse').selectpicker({
 					style: 'btn-default',
  					size: 4
				});
				
            });
</script>
{% endblock %}